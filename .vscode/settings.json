// General configuration
{
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.fontSize": 13,
  "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "workbench.colorTheme": "GitHub Dark Default",
  "telemetry.telemetryLevel": "off",
  "workbench.colorCustomizations": {
    // Terminal
    "terminal.foreground": "#ffffff",
    "terminal.background": "#1e1e1e",
    "terminal.ansiBlack": "#1a1a1a",
    "terminal.ansiBlue": "#0869cb",
    "terminal.ansiCyan": "#479ec2",
    "terminal.ansiGreen": "#26a439",
    "terminal.ansiMagenta": "#9647bf",
    "terminal.ansiRed": "#cc372e",
    "terminal.ansiWhite": "#98989d",
    "terminal.ansiYellow": "#cdac08",
    "terminal.ansiBrightBlack": "#464646",
    "terminal.ansiBrightBlue": "#0a84ff",
    "terminal.ansiBrightCyan": "#76d6ff",
    "terminal.ansiBrightGreen": "#32d74b",
    "terminal.ansiBrightMagenta": "#bf5af2",
    "terminal.ansiBrightRed": "#ff453a",
    "terminal.ansiBrightWhite": "#ffffff",
    "terminal.ansiBrightYellow": "#ffd60a",
    "terminal.selectionBackground": "#3f638b",
    "terminalCursor.foreground": "#98989d"
  },
  "debug.console.fontFamily": "'JetBrains Mono', 'monospace', monospace",
  "debug.console.fontSize": 13,
  "scm.inputFontFamily": "'JetBrains Mono', 'monospace', monospace",
  "scm.inputFontSize": 12,
  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'monospace', monospace",
  "terminal.integrated.fontSize": 12
}

